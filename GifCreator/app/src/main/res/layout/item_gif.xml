<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/common_size_4">

    <FrameLayout
        android:id="@+id/button_play_gif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/common_size_5"
        android:paddingRight="@dimen/common_size_5">

        <ImageView
            android:id="@+id/image_gif"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gif_height" />

        <ImageView
            android:id="@+id/image_load_gif"
            android:layout_width="@dimen/button_load_gif_size"
            android:layout_height="@dimen/button_load_gif_size"
            android:layout_gravity="center"
            android:src="@drawable/ic_play" />
    </FrameLayout>
</android.support.v7.widget.CardView>